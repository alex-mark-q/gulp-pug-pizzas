mixin watch(img, text, bg)
	.video-main
		if bg
			.video-main__info
				.video-main_wrapper
					span.play
						a.svg(href='/')
							img(inline src=`${img}`)
					.video-main__circle
			.play-info #{text}
		else
			.video-main__play
				.video-main_wrapper
					span.play
						a.svg(href='/')
							img(inline src=`${img}`)
							//- object(type="image/svg+xml" data=`${img}` width="400" height="300")
					.video-main__circle
			.play-about #{text}

mixin icon(name)
	svg.icon(class="icon--" + name)&attributes(attributes)
		use(xlink:href="./img/sprites/sprite.svg#" + name)
